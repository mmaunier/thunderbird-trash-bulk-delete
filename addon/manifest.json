{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "0.1.5",
  "description": "__MSG_extensionDescription__",
  "default_locale": "fr",
  "applications": {
    "gecko": {
      "id": "trash-bulk-delete@mmaunier.github.io",
      "strict_min_version": "140.0",
      "update_url": "https://raw.githubusercontent.com/mmaunier/thunderbird-trash-bulk-delete/main/updates.json"
    }
  },
  "permissions": [
    "accountsRead",
    "messagesRead",
    "messagesDelete"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/trash-16.png",
      "32": "icons/trash-32.png"
    },
    "default_title": "__MSG_extensionName__"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
