{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "0.1",
  "description": "__MSG_extensionDescription__",
  "default_locale": "fr",
  "applications": {
    "gecko": {
      "id": "deletetrash@cykyria.com",
      "strict_min_version": "140.0"
    }
  },
  "permissions": [
    "accountsRead",
    "messagesRead",
    "messagesDelete"
